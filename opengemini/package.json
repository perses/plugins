{
    "name": "@perses-dev/opengemini-plugin",
    "version": "0.1.0",
    "scripts": {
        "dev": "rsbuild dev",
        "build": "npm run build-mf && concurrently \"npm:build:*\"",
        "build-mf": "rsbuild build",
        "build:cjs": "swc ./src -d dist/lib/cjs --strip-leading-paths --config-file ../.cjs.swcrc",
        "build:esm": "swc ./src -d dist/lib --strip-leading-paths --config-file ../.swcrc",
        "build:types": "tsc --project tsconfig.build.json",
        "test": "cross-env LC_ALL=C TZ=UTC jest",
        "type-check": "tsc --noEmit"
    },
    "main": "lib/cjs/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "peerDependencies": {
        "@emotion/react": "^11.7.1",
        "@emotion/styled": "^11.6.0",
        "@mui/material": "^6.1.10",
        "@perses-dev/components": "^0.53.0-rc.1",
        "@perses-dev/core": "^0.53.0-beta.4",
        "@perses-dev/dashboards": "^0.53.0-rc.1",
        "@perses-dev/explore": "^0.53.0-rc.1",
        "@perses-dev/plugin-system": "^0.53.0-rc.1",
        "lodash": "^4.17.21",
        "react": "^17.0.2 || ^18.0.0",
        "react-dom": "^17.0.2 || ^18.0.0",
        "react-router-dom": "^6.30.1",
        "use-resize-observer": "^9.0.0"
    },
    "files": [
        "lib/**/*",
        "__mf/**/*",
        "mf-manifest.json",
        "mf-stats.json"
    ],
    "perses": {
        "moduleName": "OpenGemini",
        "schemasPath": "schemas",
        "plugins": [
            {
                "kind": "Datasource",
                "spec": {
                    "display": {
                        "name": "OpenGemini Datasource"
                    },
                    "name": "OpenGeminiDatasource"
                }
            },
            {
                "kind": "TimeSeriesQuery",
                "spec": {
                    "display": {
                        "name": "OpenGemini Time Series Query"
                    },
                    "name": "OpenGeminiTimeSeriesQuery"
                }
            }
        ]
    }
}